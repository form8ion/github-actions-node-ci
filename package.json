{
  "name": "@form8ion/github-actions-node-ci",
  "description": "CI scaffolder for JavaScript projects on GitHub Actions",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "files": [
    "example.js",
    "lib/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "runkitExampleFilename": "./example.js",
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "sideEffects": false,
  "repository": "form8ion/github-actions-node-ci",
  "bugs": "https://github.com/form8ion/github-actions-node-ci/issues",
  "homepage": "https://npm.im/@form8ion/github-actions-node-ci",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "scripts": {
    "test": "npm-run-all --print-label build --parallel lint:* --parallel test:*",
    "lint:lockfile": "lockfile-lint --path package-lock.json --type npm --validate-https --allowed-hosts npm",
    "lint:js": "eslint . --cache",
    "lint:md": "remark . --frail",
    "generate:md": "remark . --output",
    "pregenerate:md": "npm run build",
    "lint:sensitive": "ban",
    "clean": "rimraf ./lib",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "test:unit": "cross-env NODE_ENV=test c8 run-s test:unit:base",
    "test:unit:base": "DEBUG=any mocha 'src/**/*-test.js'",
    "lint:peer": "npm ls >/dev/null",
    "lint:gherkin": "gherkin-lint",
    "test:integration": "run-s 'test:integration:base -- --profile noWip'",
    "pretest:integration:base": "preview",
    "test:integration:base": "NODE_OPTIONS=--enable-source-maps DEBUG=any cucumber-js test/integration --profile base",
    "test:integration:debug": "DEBUG=test run-s test:integration",
    "test:integration:wip": "run-s 'test:integration:base -- --profile wip'",
    "test:integration:wip:debug": "DEBUG=test run-s 'test:integration:wip'",
    "test:integration:focus": "run-s 'test:integration:base -- --profile focus'",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/register": "7.18.9",
    "@cucumber/cucumber": "8.5.1",
    "@form8ion/babel-preset": "1.6.95",
    "@form8ion/commitlint-config": "1.0.36",
    "@form8ion/eslint-config": "5.0.8",
    "@form8ion/eslint-config-cucumber": "1.4.1",
    "@form8ion/eslint-config-mocha": "2.0.3",
    "@form8ion/remark-lint-preset": "4.0.1",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@travi/any": "2.1.5",
    "ban-sensitive-files": "1.9.18",
    "c8": "7.12.0",
    "chai": "4.3.6",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "gherkin-lint": "4.2.2",
    "husky": "8.0.1",
    "lockfile-lint": "4.8.0",
    "lodash.zip": "4.2.0",
    "mocha": "10.0.0",
    "mock-fs": "5.1.4",
    "npm-run-all": "4.1.5",
    "package-preview": "4.0.0",
    "remark-cli": "11.0.0",
    "remark-toc": "8.0.1",
    "remark-usage": "10.0.1",
    "rimraf": "3.0.2",
    "rollup": "2.78.1",
    "rollup-plugin-auto-external": "2.0.0",
    "sinon": "14.0.0",
    "testdouble": "3.16.6"
  },
  "dependencies": {
    "@form8ion/core": "^2.0.0",
    "@form8ion/github-workflows-core": "1.0.0",
    "@form8ion/javascript-core": "^7.0.0",
    "js-yaml": "^4.0.0",
    "make-dir": "^3.1.0",
    "semver": "^7.3.7"
  }
}
