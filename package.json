{
  "name": "@form8ion/github-actions-node-ci",
  "description": "CI scaffolder for JavaScript projects on GitHub Actions",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "type": "module",
  "engines": {
    "node": "^18.17 || >=20.6.1"
  },
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "repository": "form8ion/github-actions-node-ci",
  "bugs": "https://github.com/form8ion/github-actions-node-ci/issues",
  "homepage": "https://npm.im/@form8ion/github-actions-node-ci",
  "runkitExampleFilename": "./example.js",
  "exports": "./lib/index.js",
  "main": "./lib/index.js",
  "sideEffects": false,
  "scripts": {
    "pretest": "run-s build",
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "lint:lockfile": "lockfile-lint --path package-lock.json --type npm --validate-https --allowed-hosts npm",
    "lint:js": "eslint . --cache",
    "lint:md": "remark . --frail",
    "generate:md": "remark . --output",
    "pregenerate:md": "npm run build",
    "lint:sensitive": "ban",
    "clean": "rimraf ./lib",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "test:unit": "DEBUG=any vitest run",
    "lint:peer": "npm ls >/dev/null",
    "lint:gherkin": "gherkin-lint",
    "test:integration": "run-s 'test:integration:base -- --profile noWip'",
    "pretest:integration:base": "run-s build",
    "test:integration:base": "NODE_OPTIONS=\"--loader=testdouble --enable-source-maps\" DEBUG=any cucumber-js test/integration",
    "test:integration:debug": "DEBUG=test run-s test:integration",
    "test:integration:wip": "run-s 'test:integration:base -- --profile wip'",
    "test:integration:wip:debug": "DEBUG=test run-s 'test:integration:wip'",
    "test:integration:focus": "run-s 'test:integration:base -- --profile focus'",
    "prepare": "husky install",
    "lint:publish": "publint --strict",
    "lint:engines": "ls-engines"
  },
  "files": [
    "example.js",
    "lib/"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "dependencies": {
    "@form8ion/core": "^4.0.0",
    "@form8ion/github-workflows-core": "^5.0.0",
    "@form8ion/javascript-core": "^11.0.0",
    "js-yaml": "^4.0.0",
    "make-dir": "^4.0.0",
    "semver": "^7.3.7"
  },
  "devDependencies": {
    "@cucumber/cucumber": "10.8.0",
    "@form8ion/commitlint-config": "1.0.76",
    "@form8ion/eslint-config": "7.0.9",
    "@form8ion/eslint-config-cucumber": "1.4.1",
    "@form8ion/remark-lint-preset": "6.0.3",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@travi/any": "3.1.2",
    "ban-sensitive-files": "1.10.4",
    "c8": "10.1.2",
    "chai": "5.1.1",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "gherkin-lint": "4.2.4",
    "husky": "9.0.11",
    "jest-when": "3.6.0",
    "lockfile-lint": "4.14.0",
    "lodash.zip": "4.2.0",
    "ls-engines": "0.9.2",
    "mock-fs": "5.2.0",
    "npm-run-all2": "6.2.2",
    "publint": "0.2.8",
    "remark-cli": "12.0.1",
    "remark-toc": "9.0.0",
    "remark-usage": "11.0.1",
    "rimraf": "5.0.9",
    "rollup": "4.18.1",
    "rollup-plugin-auto-external": "2.0.0",
    "testdouble": "3.20.2",
    "vitest": "2.0.1"
  }
}
